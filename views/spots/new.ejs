<% layout('layouts/boilerplate') %>

<section class="new-section">
  <div class="new-main">
    <div class="new-background">
      <div class="new-overlay"></div>
    </div>
    <div class="new-ciricle">
      <img src="/Images/circleBackground.png" alt="" />
    </div>
    <div class="new-container-main">
      <div class="new-text">
        <h1>Add a Spot</h1>
      </div>
      <div class="new-form">
        <form action="/spots" method="POST" class="validated-form">
          <div>
            <label for="title">Spot Name: </label>
            <input
              type="text"
              id="title"
              name="spot[title]"
              size="25"
              required
            />
          </div>
          <div>
            <label class="image-label" for="image">Image Url:</label>
            <input
              class="image-imput"
              type="text"
              id="image"
              name="spot[image]"
              size="27"
              required
            />
          </div>
          <div class="form-text-area">
            <label for="location">Description: </label>
            <textarea
              name="spot[description]"
              placeholder=""
              id="description"
              cols="25"
              rows="2"
              required
            ></textarea>
          </div>
          <div>
            <label for="location">Spot Location: </label>
            <input
              type="text"
              id="location"
              name="spot[location]"
              size="21"
              required
            />
          </div>
          <div class="new-page-buttons">
            <button>Add Spot</button>
            <h2 class="new-home-button"><a href="/spots">All Spots</a></h2>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  (function () {
    'use strict';
    const forms = document.querySelectorAll('.validated-form');

    Array.from(forms).forEach(function (form) {
      form.addEventListener(
        'submit',
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add('was-validated');
        },
        false
      );
    });
  })();
</script>
